<% if flash[:errors] %>
   <div class ="form-group row text-white"> 
      <% flash[:errors].each do |error| %>
         <div class ="form-group row text-white"> 
            <%= error %>
         </div>
      <% end %>
<% end %>

<h1 class="text-white">Login</h1>

<%= form_tag '/login' do %>
   <div class="form-group row text-white">
      <%= label_tag :username%>
         <div class="col-sm-3">
            <%= text_field_tag :username, nil, class:'form-control mx-sm-3' %>
         </div>
   </div>
   
   <div class="form-group row text-white">
      <%= label_tag :password %>
         <div class="col-sm-3">
            <%= password_field_tag :password, nil, class:'form-control mx-sm-3' %>
         </div>
   </div> <br>
   
   <%= button_tag(type: "submit", class: "btn btn-success") do %>
      Sign In <i class="icon-repeat"></i>
   <% end %>
<% end %>