<h1 class="text-white">Create a Profile</h1>

<%= form_for @user do |f| %>
    <div class="form-group row text-white">
        <%= f.label  :username %>
        <div class="col-sm-3">
            <%= f.text_field :username, class: 'form-control mx-sm-3' %> <br>
        </div>
    </div>

    <div class="form-group row text-white">
        <%= f.label  :password %>
        <div class="col-sm-3">
            <%= f.password_field :password, class: 'form-control mx-sm-3' %><br>
        </div>
    </div>

    <div class="form-group row text-white">
        <%= f.label :password_confirmation %>
        <div class="col-sm-3">
            <%= f.password_field :password_confirmation, class: 'form-control mx-sm-3' %><br>
        </div>
    </div>

    <div class="form-group row text-white">
        <%= f.label  :email %>
        <div class="col-sm-3">
            <%= f.text_field :email, class: 'form-control mx-sm-3' %><br><br>
        </div>
    </div>

    <%= f.submit class: 'btn btn-success'%>
<% end %>

<div class="text-whitplayable = current_usere">
    <% if flash[:errors] %>
        <% flash[:errors].each do |error| %>
            <%= error %> <br>
        <% end %>
    <% end %>
</div>

     